<body>
    <div id="page">
        <%- include('adminPartials/nav'); -%>
                    <div class="container-fluid page-body-wrapper">
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="row">
                            <div class="col-sm-6 mb-4 mb-xl-0">
                                <div class="d-lg-flex align-items-center">
                                    <div>
                                        <h2 class="text-dark font-weight-bold mb-2">Welcome to the Hall of Deletion</h2>
                                        <h3 class="font-weight-normal mb-2">Remember, Once deleted there's no going back ...</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                    <h4 class="card-title">Post Details</h4>
                                    <p class="card-description">
                                       Full details of the Post to be deleted
                                    </p>
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                        <thead>
                                            <tr>
                                            <th>
                                                Featured
                                            </th>
                                            <th>
                                                Title
                                            </th>
                                            <th>
                                                Author
                                            </th>
                                            <th>
                                                Created On
                                            </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                            <td >
                                                <%= post.featured %>
                                            </td>
                                            <td>
                                               <%= post.title %>
                                            </td>
                                            <td>
                                                <%= post.author %>
                                            </td>
                                            <td>
                                                <%= moment(post.createdAt).format('DD-MMM-YYYY')%>
                                            </td>
                                            </tr>
                                            
                                        </tbody>
                                        </table>
                                    </div>
                                    </div>
                                    <div class="col">
                                        <form action="/admin/deletepost/<%= post.slug %>?_method=DELETE" method="post">
                                            <div class="form-group">
                                                <p class="mb-2">Are you sure You want to delete</p>
                                                <label class="toggle-switch toggle-switch-info">
                                                <input type="checkbox" name="confirm">
                                                <span class="toggle-slider round"></span>
                                                </label>  
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-danger btn-md">
                                                        Delete
                                                </button>
                                            </div>
                                        </form>                    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

